name=isolatekit
type=builder
props=()
rel='2018-03-16T20:54:06'
deps=(file:../alpine.rc file:../alpine/sdk.rc file:../alpine/sdk/gnome.rc
      file:../alpine/sdk/gnome-static.rc)

fn run {
  apk add vala

  git clone https://github.com/kirbyfan64/isolatekit.git
  cd isolatekit
  sed -i 's/warn(/_warn(/' src/main.vala
  make VALAFLAGS='-X -static -X -lpcre -X -lffi -X -lgmodule-2.0 -X -lglib-2.0 -X -lz -X -lmount -X -lblkid -X -luuid'

  cp bin/ik $HOME
}
